---
import { Icon } from "astro-icon";

const links = [
  {
    url: "https://facebook.com/",
    description: "B&L Immobilien AG on Facebook",
    icon: "fa-brands:facebook-square",
  },
  {
    url: "https://instagram.com/",
    description: "B&L Immobilien AG on Instagram",
    icon: "fa-brands:instagram-square",
  },
  {
    url: "https://twitter.com/",
    description: "B&L Immobilien AG on Twitter",
    icon: "fa-brands:twitter",
  },
];
---
<footer class=" bg-brand-gunmetal">
  
<div class="px-4 pt-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8">
  <div class="grid gap-10 row-gap-6 mb-8 sm:grid-cols-2 lg:grid-cols-4">
    <div class="sm:col-span-2">

      <a href="/" aria-label="Go home" title="Company" class="inline-flex items-center">
    <Icon name="bl-logo" class=" w-full h-36 " />
      </a>
      <!-- <div class="mt-6 lg:max-w-sm">
        <p class="text-sm text-gray-400">
          Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.
        </p>
        
      </div> -->
    </div>
    <div class="space-y-2 text-sm">
      <p class="text-base font-bold tracking-wide text-white">Contacts</p>
      <div class="flex">
        <p class="mr-1 text-gray-400">Phone:</p>
        <a href="tel:++41 56 560 61 61" aria-label="Our phone" title="Our phone" class="transition-colors duration-300  text-brand-yellowLighten hover:text-brand-yellow">+41 56 560 61 61</a>
      </div>
      <div class="flex">
        <p class="mr-1 text-gray-400">Email:</p>
        <a href="mailto:info@bl-baumanagement.ch" aria-label="Our email" title="Our email" class="transition-colors duration-300 text-brand-yellowLighten hover:text-brand-yellow ">info@bl-baumanagement.ch</a>
      </div>
      <div class="flex">
        <p class="mr-1 text-gray-400">Address:</p>
        <a href="https://www.google.com/maps" target="_blank" rel="noopener noreferrer" aria-label="Our address" title="Our address" class="transition-colors duration-300
        text-brand-yellowLighten hover:text-brand-yellow ">
          Grabäckerstrasse 56, CH
        </a>
      </div>
    </div>
    <div>
      <span class="text-base font-bold tracking-wide text-white">Social</span>
      <div class="flex items-center mt-1 space-x-3">


        {links.map((link) => (
          
            <a
              class="text-gray-300 transition-colors duration-300 hover:text-white"
              href={link.url}
            >
              <span class="sr-only">{link.description}</span>
              <Icon class="h-6 w-6" name={link.icon} />
              
            </a>
          
        ))}
      </div>
      <p class="mt-4 text-sm text-gray-400">
        Bacon ipsum dolor amet short ribs pig sausage prosciutto chicken spare ribs salami.
      </p>
    </div>
  </div>
  <div class="flex flex-col-reverse border-gray-700 justify-between pt-5 pb-10 border-t lg:flex-row">
    <p class="text-sm text-gray-400">
      © Copyright 2022 B&L Immobilien AG. All Rights Reserved
    </p>
    <ul class="flex flex-col mb-3 space-y-2 lg:mb-0 sm:space-y-0 sm:space-x-5 sm:flex-row">
      <li>
        <a href="/" class="text-sm text-gray-400 transition-colors duration-300 hover:text-deep-purple-accent-400">F.A.Q</a>
      </li>
      <li>
        <a href="/" class="text-sm text-gray-400 transition-colors duration-300 hover:text-deep-purple-accent-400">Privacy Policy</a>
      </li>
      <li>
        <a href="/" class="text-sm text-gray-400 transition-colors duration-300 hover:text-deep-purple-accent-400">Terms &amp; Conditions</a>
      </li>
    </ul>
  </div>
</div>
</footer>